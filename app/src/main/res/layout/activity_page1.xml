<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Page1">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Page1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-132dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="425dp"
            android:layout_marginEnd="117dp"
            android:text="BİTİR" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="350dp"
            android:text="Bildiğiniz Dilleri Seçiniz" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="20dp"
            android:text="HOŞGELDİNİZ" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="236dp"
            android:text="Durak İsmi Seçiniz" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="144dp"
            android:layout_height="32dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="260dp"
            android:text="Cinsiyetinizi Seçiniz" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="370dp"
            android:text="Kotlin" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="100dp"
            android:text="Java" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="370dp"
            android:text="Flutter" />

        <EditText
            android:id="@+id/isimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:hint="İsim Soyisim"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="139dp"
            android:layout_marginTop="80dp"
            android:text="İsim ve Soyisim Yazınız" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="233dp"
            android:layout_height="26dp"
            android:layout_marginStart="109dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="42dp"
            android:entries="@array/station_arrays"
            android:prompt="@string/station_prompt" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="81dp"
            android:layout_marginTop="300dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DİĞER" />

            <RadioButton
                android:id="@+id/radioButtonE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ERKEK" />

            <RadioButton
                android:id="@+id/radioButtonK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KADIN" />


        </RadioGroup>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="340dp"
            android:layout_height="221dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="34dp" />


    </FrameLayout>

</LinearLayout>